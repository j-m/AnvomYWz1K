{
  "name": "340ct-marshj6",
  "version": "0.0.2",
  "description": "Coventry University. Module 340CT. Coursework. Game Review. Jonathan Marsh",
  "main": "./src/main.js",
  "scripts": {
    "coverage": "jest --coverage",
    "doc": "jsdoc -c ./jsdoc.conf",
    "format": "eslint ./src/* --fix",
    "start": "node ./src/main.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.coventry.ac.uk/340CT-1920SEPJAN/marshj6.git"
  },
  "keywords": [
    "game",
    "review",
    "website",
    "coursework"
  ],
  "author": "Jonathan Marsh <marshj6@coventry.ac.uk>",
  "license": "UNLICENSED",
  "dependencies": {
    "glob": "^7.1.6",
    "handlebars": "^4.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.1"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "jsdoc": "^3.6.3",
    "jsdoc-route-plugin": "^0.1.0",
    "sqlite-async": "^1.0.12",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "standard"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ],
    "rules": {}
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "npm run coverage",
      "pre-merge": "npm run doc"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ]
  }
}
